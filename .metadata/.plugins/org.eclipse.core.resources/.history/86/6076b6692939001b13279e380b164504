package test;

public class test8 {
	public static void main(String[] args) {
		for(int i = 0;i<10;i++) {
			for(int j = 1;j<=39;j++) {
				if(j<(2*i+2)||j>=(39-(2*i))) {
					System.out.print("*");
				}else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
		
		System.out.println("-----------------------------------------------------------");
		for(int i = 0;i<9;i++) {
			for(int j = 1;j<=9;j++) {
				if(i<5) {
					if(j<=(4-i)||j>(9-(4-i))){
						System.out.print(" ");
					}else {
						System.out.print("*");
					}
				}else {
					if(j<=(5-(10-i)/2)||j>(9-i)){
						System.out.print(" ");
					}else {
						System.out.print("*");
					}
				}
			}
			System.out.println();
		}
	}
}
